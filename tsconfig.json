{
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "./plugins.d.ts"],
  "exclude": ["node_modules", "iconfont"],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "es2016"],
    "jsx": "react",
    "module": "commonjs",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/components/*"],
      "@/*": ["./src/modules/*"],
      "assets/*": ["./src/assets/*"],
      "utils/*": ["./src/utils/*"]
    },
    "types": ["node", "webpack-env"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
