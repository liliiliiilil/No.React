{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/components/*"],
      "@/*": ["./src/modules/*"],
      "assets/*": ["./src/assets/*"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src", "src/**/*.d.ts", ".plugins.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
